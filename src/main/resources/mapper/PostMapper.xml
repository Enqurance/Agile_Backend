            <result property="postFloorNum" column="post_floor_num" jdbcType="INTEGER"/>
            <result property="pinIdStr" column="pin_id_str" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
